<!DOCTYPE html>
<html>
<head>
  <title>Kathleen.codes</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body role="document">

  <div class="jumbotron" id="splash-jumbo">
    <div class="container">
      <%= render 'layouts/splash_jumbo' %>
    </div>
  </div>


  <div class="container splash" id="content" role="main">
    <%= render 'shared/flash_messages', flash: flash %>
    <%= yield %>
  </div>

  <%= render 'layouts/footer' %>

</body>
</html>
