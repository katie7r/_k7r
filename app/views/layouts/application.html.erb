<!DOCTYPE html>
<html>
<head>
  <title>katier.codes</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body role='document'>

  <%= render 'layouts/nav' %>

  <%= render 'static/intro' if home? %>

  <%= render 'shared/flash_messages', flash: flash unless flash.empty? %>
  <div class='container<%= ' home' if home? %>' role='main'>
    <div id='main-content'>
      <%= yield %>
    </div>
  </div>

  <%= render 'layouts/footer' %>

</body>
</html>
