<p>Choose a Category:</p>
<div class='list-group'>
  <% all_tidbit_categories.each do |category| %>
    <%= link_to tidbits_path_for(category, published), class: "list-group-item#{' active' if currently == category}" do %>
      <%= category.titleize %><span class='badge badge-primary'><%= tidbit_totals[category] %></span>
    <% end %>
  <% end %>

  <% if current_admin %>
    <p class='text-right'><%= link_to "View #{published ? 'Unpublished' : 'Published'} Tidbits", tidbits_path_for(currently, !published) %></p>
  <% end %>
</div>
