<%= form_for tidbit, html: { class: 'form-horizontal'} do |f| %>

  <div class="form-group">
    <label class="col-sm-2 control-label" for="title">Title</label>
    <div class="col-sm-10">
      <%= f.text_field :title, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label" for="type">Type</label>
    <div class="col-sm-10">
      <%= f.select :type, Tidbit::TYPES.map{ |tt| [ tt.titleize, tt ] }, selected: tidbit.tidbit_type, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label" for="content">Content</label>
    <div class="col-sm-10">
      <%= f.text_area :content, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label" for="more_info">More Info</label>
    <div class="col-sm-10">
      <%= f.text_area :more_info, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: 'btn btn-default' %>
    </div>
  </div>

<% end %>
