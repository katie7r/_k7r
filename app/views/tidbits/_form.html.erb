<%= form_for tidbit, html: { class: 'form-horizontal'} do |f| %>

  <div class='form-group'>
    <%= f.label :title, class: 'col-sm-2 control-label' %>
    <div class='col-sm-10'>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
  </div>

  <div class='form-group'>
    <%= f.label :category, class: 'col-sm-2 control-label' %>
    <div class='col-sm-10'>
      <%= f.select :category, tidbit_category_options(tidbit.category), class: 'form-control' %>
    </div>
  </div>

  <div class='form-group'>
    <%= f.label :content, class: 'col-sm-2 control-label' %>
    <div class='col-sm-10'>
      <%= f.text_area :content, class: 'form-control' %>
    </div>
  </div>

  <div class='form-group'>
    <%= f.label :more_info, class: 'col-sm-2 control-label' %>
    <div class='col-sm-10'>
      <%= f.text_field :more_info, class: 'form-control' %>
    </div>
  </div>

  <div class='form-group'>
    <%= f.label :more_info_link, class: 'col-sm-2 control-label' %>
    <div class='col-sm-10'>
      <%= f.text_field :more_info_link, class: 'form-control' %>
    </div>
  </div>

  <div class='form-group'>
    <div class='col-sm-offset-2 col-sm-10'>
      <%= f.submit class: 'btn btn-k7r' %>
    </div>
  </div>

<% end %>
